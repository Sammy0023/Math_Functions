<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mathic"
    tools:context=".FunctionsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Functions"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/triangleTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/triangleTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/triangle"
        android:layout_marginBottom="96dp"
        android:text="S = (1/2) * a * h"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ovalTextView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginEnd="32dp"
        android:text="S = π * a * b"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/oval"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/triangleTextView" />

    <TextView
        android:id="@+id/squareTextView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:text="S = a ²"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="#3F51B5"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/triangleTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>